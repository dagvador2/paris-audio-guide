{
  "expo": {
    "name": "Paris Audio Guide",
    "slug": "paris-audio-guide",
    "scheme": "parisaudioguide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5A27"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.parisaudioguide.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Paris Audio Guide utilise votre position pour vous guider pendant les visites et déclencher les contenus aux points d'intérêt.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Paris Audio Guide utilise votre position en arrière-plan pour continuer à vous guider même quand l'application n'est pas au premier plan.",
        "UIBackgroundModes": [
          "audio",
          "location",
          "audio",
          "location"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D5A27"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.parisaudioguide.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Paris Audio Guide utilise votre position pour vous guider pendant les visites."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#2D5A27"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "391f9226-7495-40dd-b4dd-446e1ef580bf"
      }
    }
  }
}
